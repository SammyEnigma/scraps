{
  "linters": {
    "cppcheck": {
      "type": "cppcheck",
      "include": "(\\.(cpp|c|h)$)",
      "exclude": "(loggers\\.cpp)",
      "flags": [
        "--suppress=useInitializationList"
      ]
    },
    "cppcheck-mixed-objc": {
      "type": "cppcheck",
      "include": "(loggers\\.cpp)",
      "flags": [
        "--suppress=syntaxError"
      ]
    },
    "pep8": {
      "type": "pep8",
      "include": "((\\.py|build-deps|configure|scripts/build)$)",
      "flags": [
        "--max-line-length=120"
      ],
      "severity": {
        "E501": "warning"
      }
    },
    "text": {
      "type": "text",
      "include": [
        "(\\.(cpp|c|h|json|yaml)$)",
        "((build-deps|configure|Jamroot|Jamfile|scripts/.*)$)"
      ],
      "exclude": "(^tests/unit/src/utility\\.cpp$)",
      "text.max-line-length": 200
    },
    "text-allow-utf8": {
      "type": "text",
      "include": "(^tests/unit/src/utility\\.cpp$)",
      "severity": {
        "5": "disabled"
      },
      "text.max-line-length": 120
    },
    "merge-conflict": {
      "type": "merge-conflict",
      "include": "(.*)"
    }
  }
}
