#!/usr/bin/env python3

try:
    from ci_tacklebox.ci import configure
    configure.main(development=True)
    exit()
except ImportError:
    print('For unit test support, install ci_tacklebox. (https://github.com/bittorrent/ci-tacklebox)')

import multiprocessing
import subprocess

subprocess.check_call(['./needy/scripts/needy generate jamfile --satisfy-args="-j {}"'.format(multiprocessing.cpu_count())], shell=True)
print('Configuration complete. You may now build via b2.')
